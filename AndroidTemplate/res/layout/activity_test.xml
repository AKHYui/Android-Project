<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/mainBg">
        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="5dp"
            android:textSize="@dimen/text_small"
            android:text="返回"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/text_common"
            android:text="心理测试"/>

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:text="收藏"
            android:visibility="invisible"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/xuanze_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_big"
            android:orientation="vertical">

            <TextView
                android:id="@+id/problem_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_big"
                android:text="纯文本显示?"/>


            <RadioGroup
                android:id="@+id/xuanze_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:text="A、"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonA" />

                <RadioButton
                    android:text="B、"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonB" />

                <RadioButton
                    android:text="C、"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonC" />

                <RadioButton
                    android:text="D、"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonD" />

            </RadioGroup>



            <TextView
                android:id="@+id/answer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:textColor="@android:color/holo_blue_dark"
                android:text="答案：A"
                android:visibility="gone"/>


            <RadioGroup
                android:id="@+id/panduan_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <RadioButton
                    android:text="正确"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonRight" />

                <RadioButton
                    android:text="错误"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonError" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/wenda_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_common"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="解答："/>
                <EditText
                    android:id="@+id/we_chat_et"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/pre_next_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/pre_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_common"
                    android:text="上一题"
                    android:textSize="@dimen/text_common"
                    android:textColor="@android:color/white"
                    android:background="@drawable/selector_button"/>

                <TextView
                    android:id="@+id/count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/text_big"
                    android:text="0/0"/>
                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_common"
                    android:text="下一题"
                    android:textSize="@dimen/text_common"
                    android:textColor="@android:color/white"
                    android:background="@drawable/selector_button"/>
            </LinearLayout>

            <Button
                android:id="@+id/commit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_common"
                android:layout_marginTop="20dp"
                android:text="我要交卷"
                android:textSize="@dimen/text_common"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_common"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="考试时间：100分钟"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/remain_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_common"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="剩余时间：100分钟"/>

            </LinearLayout>


        </LinearLayout>




    </ScrollView>


</LinearLayout>
