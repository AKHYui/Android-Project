<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/mainBg">
        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_top_bar"
            android:drawablePadding="5dp"
            android:textSize="@dimen/text_small"
            android:text=""/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="@dimen/text_common"
            android:text="精美视频推荐"/>

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:text="操作"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:padding="@dimen/padding_big"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>


    <!--左侧菜单-->
    <RelativeLayout
        android:id="@+id/menu_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/shade_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C0C0C0"
            android:visibility="visible"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_lv"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:id="@+id/back_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_common"
                android:textColor="@android:color/white"
                android:drawablePadding="@dimen/padding_small"
                android:drawableRight="@drawable/ic_top_bar"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider"/>

            <TextView
                android:id="@+id/one_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_common"
                android:text="精美视频"
                android:textColor="#242424"
                android:drawablePadding="@dimen/padding_small"
                android:drawableLeft="@drawable/mark"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider">

            </View>

            <TextView
                android:id="@+id/two_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_common"
                android:text="提问"
                android:textColor="@android:color/white"
                android:drawablePadding="@dimen/padding_small"
                android:drawableLeft="@drawable/mark"
                android:visibility="gone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider">

            </View>
            <TextView
                android:id="@+id/three_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_common"
                android:text="商家介绍"
                android:textColor="#242424"
                android:drawablePadding="@dimen/padding_small"
                android:drawableLeft="@drawable/mark"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider">
            </View>

            <TextView
                android:id="@+id/four_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_common"
                android:text="有奖竞猜"
                android:textColor="#242424"
                android:drawablePadding="@dimen/padding_small"
                android:drawableLeft="@drawable/mark"
                android:visibility="visible"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider">
            </View>

            <TextView
                android:id="@+id/four_one_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_common"
                android:text="关于商家"
                android:textColor="#242424"
                android:drawablePadding="@dimen/padding_small"
                android:drawableLeft="@drawable/mark"
                android:visibility="visible"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider">
            </View>

            <TextView
                android:id="@+id/five_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_common"
                android:text="个人中心"
                android:textColor="#242424"
                android:drawablePadding="@dimen/padding_small"
                android:drawableLeft="@drawable/mark"
                android:visibility="visible"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/divider">
            </View>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
